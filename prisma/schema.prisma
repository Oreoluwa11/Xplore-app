generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id        Int        @id @default(autoincrement())
  name      String
  area      String
  address   String
  image     String?
  budget    String?
  details   String?    @db.Text
  comments  Comment[]
}

model Comment {
  id           Int      @id @default(autoincrement())
  restaurantId Int
  name         String
  text      String
  createdAt    DateTime @default(now())
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}

